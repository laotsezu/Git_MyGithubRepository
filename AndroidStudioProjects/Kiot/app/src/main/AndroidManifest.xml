<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="laotsezu.com.kiot">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".HomeActivity"></activity>
        <activity
            android:name=".personnel.PersonnelLoginActivity"
            android:theme="@style/AppTheme.Lauch">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".partner.CustomerAddActivity"
            android:windowSoftInputMode="adjustResize">
            >
        </activity>
        <activity
            android:name=".trade.GoodsSelectActivity"
            android:windowSoftInputMode="adjustResize|adjustPan|stateHidden"></activity>
        <activity android:name=".trade.CartBrowseActivity" />
        <activity
            android:name=".trade.PaymentActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".partner.CustomerSelectActivity" />
        <activity android:name=".goods.GoodsFixedActivity" />
        <activity
            android:name=".personnel.PersonnelActionActivity"
            android:label="@string/title_activity_personnel_action"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>