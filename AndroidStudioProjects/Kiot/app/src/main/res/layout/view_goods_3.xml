<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    >
    <data>
        <import type="laotsezu.com.kiot.goods.Goods"/>
        <variable
            name="goods"
            type="Goods"/>
    </data>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="2dp"
        card_view:cardCornerRadius="2dp"
        card_view:cardUseCompatPadding="true"
        android:layout_marginStart="@dimen/activity_horizontal_super_small_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_super_small_margin"
        android:background="@android:color/white"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/activity_horizontal_small_margin"
        android:paddingEnd="@dimen/activity_horizontal_small_margin"
        android:background="@drawable/ripped_with_primarycolor"
        >

        <ImageView
            android:id="@+id/goods_icon"
            android:layout_width="?android:listPreferredItemHeightLarge"
            android:layout_height="?android:listPreferredItemHeightLarge"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/app_name"
            android:loadUrl="@{goods.goods_icon}"
            android:paddingEnd="@dimen/activity_horizontal_small_margin"
            />
        <LinearLayout
            android:id="@+id/goods_info_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/goods_icon"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/activity_horizontal_super_small_margin"
                android:textAppearance="?android:textAppearanceListItem"
                android:textColor="@android:color/black"
                android:text="@{goods.goods_ten}"
                android:gravity="top"

                />
            <TextView
                android:id="@+id/goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textAppearance="?android:textAppearance"
                android:textColor="@android:color/holo_red_light"
                android:text="@{goods.goods_gia_ban_info}"
                />
            <!--<TextView
                android:id="@+id/goods_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_horizontal_super_small_margin"
                android:layout_gravity="bottom"
                android:lines="1"
                android:text="@{goods.goods_loai}"
                android:textSize="12sp"
                android:textColor="#42000000"
                />-->
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/goods_so_luong_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minHeight="?android:listPreferredItemHeightLarge"
            android:minWidth="?android:listPreferredItemHeightSmall"
            android:layout_marginTop="@dimen/activity_horizontal_super_small_margin"
            android:layout_marginBottom="@dimen/activity_horizontal_super_small_margin"
            android:layout_toEndOf="@+id/goods_info_container"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            >
            <FrameLayout
                android:id="@+id/goods_detail_icon_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/goods_cart_icon_container"
                android:layout_marginBottom="@dimen/activity_horizontal_super_small_margin"
                android:layout_alignParentEnd="true"
                android:background="@drawable/ripped_with_greencolor"
                >
                <ImageView
                    android:id="@+id/goods_detail_icon"
                    android:layout_width="@dimen/ic_normal_width"
                    android:layout_height="@dimen/ic_normal_height"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_fix_primary_24dp"
                    />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/goods_cart_icon_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/activity_horizontal_super_small_margin"
                android:background="@drawable/ripped_with_redcolor"
                >
                <ImageView
                    android:id="@+id/goods_cart_icon"
                    android:layout_width="@dimen/ic_normal_width"
                    android:layout_height="@dimen/ic_normal_height"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_cart_red_24dp"
                    />
            </FrameLayout>
            <TextView
                android:id="@+id/goods_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/goods_cart_icon_container"
                android:layout_marginTop="@dimen/activity_horizontal_super_small_margin"
                android:padding="@dimen/activity_horizontal_super_small_margin"
                android:text="@{goods.goods_so_luong_text}"
                android:textSize="12sp"
                android:textColor="#f9120115"
                />
        </RelativeLayout>
    </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>