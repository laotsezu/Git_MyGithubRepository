<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="laotsezu.com.kiot.trade.Cart"/>
        <variable
            name="cart"
            type="Cart"/>
    </data>
    <android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@android:color/white"
        >
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags ="scroll|enterAlways"
            >
            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >
                    <ImageView
                        android:id="@+id/cart_back_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingEnd="@dimen/activity_horizontal_normal_margin"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_arrow_back_white_24dp"
                        android:onClick="onBackButtonClick"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:textColor="@android:color/white"
                        android:text="Tên hóa đơn"
                        />
                </LinearLayout>
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>
        <LinearLayout
            android:id="@+id/cart_body"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?android:listPreferredItemHeightSmall"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="@dimen/activity_horizontal_small_margin"
                android:onClick="onCustomerContainerClick"
                >
                <ImageView
                    android:id="@+id/cart_customer_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_person_black_24dp"
                    />
                <TextView
                    android:id="@+id/cart_customer_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textColor="@android:color/black"
                    android:text="Khách lẻ"
                    />
                <ImageView
                    android:id="@+id/cart_customer_navigator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/app_name"
                    android:layout_gravity="center_vertical|end"
                    android:src="@drawable/ic_navigate_next_black_24dp"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="30dp"
                android:padding="@dimen/activity_horizontal_small_margin"
                android:background="#10000000"
                android:gravity="center_vertical"
                android:textAppearance="?android:textAppearanceListItem"
                android:text="Hàng hóa"
                />
            <ListView
                android:id="@+id/cart_goods_list"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingStart="@dimen/activity_horizontal_small_margin"
                android:paddingEnd="@dimen/activity_horizontal_small_margin"
                android:scrollbars="none"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#10000000"
                />
            <LinearLayout
                android:id="@+id/cart_total_price_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?android:listPreferredItemHeightSmall"
                android:background="#10000000"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/activity_horizontal_normal_margin"
                android:paddingEnd="@dimen/activity_horizontal_normal_margin"
                android:transitionName="totalPrice"
                >
                <TextView
                    android:id="@+id/cart_total_price_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:text="Tổng cộng"
                    android:transitionName="totalPriceLabel"
                    />
                <TextView
                    android:id="@+id/cart_total_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/colorAddition"
                    android:gravity="end"
                    android:transitionName="totalPriceValue"
                    />
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAddition">
                <Button
                    android:id="@+id/cart_payment_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="?android:listPreferredItemHeight"
                    android:background="?android:attr/selectableItemBackground"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:text="Thanh toán"
                    android:onClick="onPaymentButtonClick"
                    />
            </FrameLayout>
        </LinearLayout>
    </android.support.design.widget.CoordinatorLayout>
</layout>