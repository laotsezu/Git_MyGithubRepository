<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="laotsezu.com.kiot.trade.NewBillInfo"/>
        <variable
            name="new_bill"
            type="NewBillInfo"/>
    </data>
<android.support.design.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    >
    <android.support.design.widget.AppBarLayout
        android:id="@+id/payment_appbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        app:layout_scrollFlags="exitUntilCollapsed"
        >
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/payment_toolbar_navigator"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_arrow_back_white_24dp"
                    android:contentDescription="@string/app_name"
                    android:paddingEnd="@dimen/activity_horizontal_margin"
                    android:onClick="onBackButtonClick"
                    />
                <TextView
                    android:id="@+id/payment_appbar_text"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:text="Thanh toán "
                    android:gravity="center_vertical"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textColor="@android:color/white"
                    />
            </LinearLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <RelativeLayout
        android:id="@+id/payment_body"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >
        <LinearLayout
            android:id="@+id/payment_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/payment_complete_button_container"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?android:listPreferredItemHeight"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:textAppearanceListItemSmall"
                    android:text="Phương thức "
                    />
                <EditText
                    android:id="@+id/bill_phuong_thuc_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:textAppearanceListItemSmall"
                    android:gravity="end"
                    android:text="Tiền mặt"
                    android:inputType="text"
                    android:maxLength="18"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#42000000"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?android:listPreferredItemHeight"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:textAppearanceListItemSmall"
                    android:text="Tổng tiền "
                    />
                <TextView
                    android:id="@+id/bill_tong_tien_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:textAppearanceListItemSmall"
                    android:gravity="end"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#42000000"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?android:listPreferredItemHeight"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:textAppearanceListItemSmall"
                    android:text="Giảm giá "
                    />
                <TextView
                    android:id="@+id/bill_giam_gia_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:textAppearanceListItemSmall"
                    android:gravity="end"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#42000000"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?android:listPreferredItemHeight"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:transitionName="totalPrice"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:textAppearanceListItemSmall"
                    android:text="Khách cần trả "
                    android:transitionName="totalPriceLabel"
                    />
                <TextView
                    android:id="@+id/bill_tien_can_tra"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="?android:textAppearanceListItemSmall"
                    android:gravity="end"
                    android:textColor="@android:color/holo_red_light"
                    android:transitionName="totalPriceValue"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#42000000"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?android:listPreferredItemHeight"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:textAppearanceListItemSmall"
                    android:text="Tiền khách đưa "
                    />
                <EditText
                    android:id="@+id/bill_tien_da_tra"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:textAppearanceListItemSmall"
                    android:gravity="end"
                    android:textColor="@android:color/holo_red_dark"
                    android:inputType="number"
                    android:maxLength="18"
                    android:text="0"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#42000000"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?android:listPreferredItemHeight"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:textAppearanceListItemSmall"
                    android:text="Tiền thừa"
                    />
                <TextView
                    android:id="@+id/bill_tien_tra_khach_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:textAppearanceListItemSmall"
                    android:gravity="end"
                    android:text="0đ"
                    />
            </LinearLayout>

        </LinearLayout>
        <FrameLayout
            android:id="@+id/payment_complete_button_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAddition"
            android:layout_alignParentBottom="true"
            >
            <Button
                android:id="@+id/payment_complete_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?android:listPreferredItemHeight"
                android:background="?android:attr/selectableItemBackground"
                android:textAppearance="?android:textAppearanceListItemSmall"
                android:text="Hoàn thành "
                android:textColor="@android:color/white"
                android:onClick="onPaymentButtonClick"
                />
        </FrameLayout>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
</layout>