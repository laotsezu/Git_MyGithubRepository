<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="laotsezu.com.kiot.partner.Customer"/>
        <variable
            name="customer"
            type="Customer"/>
    </data>
    <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.AppBarLayout
            android:id="@+id/select_customer_appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|enterAlways"
            >
            <android.support.v7.widget.Toolbar
                android:id="@+id/select_customer_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/customer_select_toolbar_navigator"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_arrow_back_white_24dp"
                        android:contentDescription="@string/app_name"
                        android:paddingEnd="@dimen/activity_horizontal_normal_margin"
                        />
                    <TextView
                        android:id="@+id/customer_select_toolbar_text"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Khách hàng"
                        android:gravity="center_vertical"
                        android:textColor="@android:color/white"
                        android:textAppearance="?android:textAppearanceLarge"
                        />
                    <ImageView
                        android:id="@+id/select_customer_search"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_search_white_24dp"
                        android:contentDescription="@string/app_name"
                        />
                    <ImageView
                        android:id="@+id/select_customer_add"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_person_add_white_24dp"
                        android:contentDescription="@string/app_name"
                        android:paddingEnd="@dimen/activity_horizontal_normal_margin"
                        android:paddingStart="@dimen/activity_horizontal_normal_margin"
                        android:onClick="onAddCustomerIconClick"
                        />
                </LinearLayout>
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>
        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/select_customer_list_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/select_customer_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:background="@color/light_gray"
                />
        </android.support.v4.widget.SwipeRefreshLayout>
        <ProgressBar
            android:id="@+id/select_customer_progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="?android:listPreferredItemHeightSmall"
            android:layout_gravity="center"
            style="?android:progressBarStyleSmall"
            />
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/select_customer_loadfailed_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingTop="?android:actionBarSize"
            >
            <TextView
                android:id="@+id/select_customer_loadfailed_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAppearance="?android:textAppearance"
                android:text="Kết nối mạng không ổn định"
                android:textColor="?android:textColorHint"
                />
            <Button
                android:id="@+id/select_customer_loadfailed_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/goods_select_loadfailed_text"
                android:layout_centerHorizontal="true"
                android:textAppearance="?android:textAppearanceLarge"
                android:text="THỬ LẠI"
                android:textColor="?android:textColorHint"
                android:onClick="onRetryButtonClick"
                />
        </RelativeLayout>
    </android.support.design.widget.CoordinatorLayout>
</layout>