<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="laotsezu.com.kiot.personnel.Personnel"/>
        <variable
            name="personnel"
            type="Personnel"/>
    </data>
    <android.support.v4.widget.DrawerLayout
        android:id="@+id/goods_select_drawer_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/goods_select_main_content_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >
            <android.support.design.widget.AppBarLayout
                android:visibility="invisible"
                android:id="@+id/goods_select_appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|enterAlways"
                >
                <android.support.v7.widget.Toolbar
                    android:id="@+id/goods_select_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?android:attr/actionBarSize"
                    >
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">
                        <ImageView
                            android:id="@+id/goods_select_toolbar_navigator"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_reorder_white_24dp"
                            android:contentDescription="@string/app_name"
                            android:paddingEnd="@dimen/activity_horizontal_margin"
                            android:onClick="onHomeButtonOnClick"
                            />
                        <TextView
                            android:id="@+id/goods_select_toolbar_text"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Tên Hóa Đơn"
                            android:gravity="center_vertical"
                            android:textColor="@android:color/white"
                            android:textAppearance="?android:textAppearanceLarge"
                            />
                        <ImageView
                            android:visibility="invisible"
                            android:id="@+id/goods_select_toolbar_report"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_sms_white_24dp"
                            android:contentDescription="@string/app_name"
                            />
                        <ImageView
                            android:visibility="invisible"
                            android:id="@+id/goods_select_toolbar_new"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_add_white_24dp"
                            android:contentDescription="@string/app_name"
                            android:paddingEnd="@dimen/activity_horizontal_margin"
                            android:paddingStart="@dimen/activity_horizontal_margin"
                            />
                    </LinearLayout>
                </android.support.v7.widget.Toolbar>
            </android.support.design.widget.AppBarLayout>
            <ImageView
                android:visibility="invisible"
                android:id="@+id/goods_select_dinh_icon"
                android:layout_width="6dp"
                android:layout_height="24dp"
                android:layout_gravity="center_horizontal|bottom"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_dinh"
                />
            <ImageView
                android:id="@+id/goods_select_ring_icon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:contentDescription="@string/app_name"
                android:layout_gravity="center"
                android:src="@drawable/ic_circular"
                android:transitionName="login_checked"
                />

            <RelativeLayout
                    android:visibility="invisible"
                    android:id="@+id/goods_select_body"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    >
                    <RelativeLayout
                        android:id="@+id/goods_select_additional_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="?android:listPreferredItemHeightSmall"
                        android:onClick="naviToSelectCustomerActivity"
                        android:padding="@dimen/activity_horizontal_small_margin"
                        >
                        <ImageView
                            android:id="@+id/goods_select_customer_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/app_name"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_person_black_24dp"
                            />
                        <TextView
                            android:id="@+id/goods_select_customer_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/goods_select_customer_icon"
                            android:layout_toStartOf="@+id/goods_select_price_table_icon"
                            android:layout_centerVertical="true"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:text="Khách lẻ"
                            />
                        <ImageView
                            android:id="@+id/goods_select_price_table_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@+id/goods_select_price_table_name"
                            android:src="@drawable/ic_local_offer_black_24dp"
                            android:contentDescription="@string/app_name"
                            />
                        <TextView
                            android:id="@+id/goods_select_price_table_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:text="Bảng giá bán buôn"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/goods_select_payment_navigator"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/goods_select_additional_info"
                        android:gravity="center_vertical"
                        android:background="@drawable/ripped_with_green_solid_primary"
                        android:clickable="true"
                        android:onClick="onPaymentContainerClick"
                        android:animateLayoutChanges="true"
                        android:transitionName="totalPrice"
                        >
                        <LinearLayout
                            android:id="@+id/goods_select_total_count_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?android:attr/selectableItemBackground"
                            android:paddingStart="@dimen/activity_horizontal_margin"
                            android:paddingEnd="@dimen/activity_horizontal_margin"
                            android:gravity="center_vertical"
                            >
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minHeight="?android:listPreferredItemHeight"
                                >
                                <ImageView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:contentDescription="@string/app_name"
                                    android:src="@drawable/ic_filter_none_white_48dp"
                                    android:layout_centerInParent="true"
                                    />
                                <TextView
                                    android:id="@+id/goods_select_total_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:paddingStart="@dimen/activity_horizontal_small_margin"
                                    android:paddingBottom="@dimen/activity_horizontal_small_margin"
                                    android:textColor="@android:color/white"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/goods_select_total_count_text_size"
                                    android:text="0"
                                    />
                            </RelativeLayout>
                            <TextView
                                android:id="@+id/goods_select_total_price"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:textSize="@dimen/price_size"
                                android:textColor="@android:color/white"
                                android:text="0đ"
                                />
                        </LinearLayout>
                    </RelativeLayout>
                    <View
                        android:id="@+id/goods_select_padding1"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@+id/goods_select_payment_navigator"
                        android:background="#42c7bdbd"
                        />
                    <LinearLayout
                        android:id="@+id/goods_select_search_and_scan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="?android:listPreferredItemHeightSmall"
                        android:layout_below="@+id/goods_select_padding1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:background="@android:color/white"
                        >
                        <ImageView
                            android:id="@+id/goods_select_search_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_search_black_24dp"
                            android:contentDescription="@string/app_name"
                            android:layout_marginStart="@dimen/activity_horizontal_margin"
                            android:paddingEnd="@dimen/activity_horizontal_small_margin"
                            />
                        <laotsezu.com.kiot.utilities.GoodsSearchEditText
                            android:id="@+id/goods_select_search_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Tìm kiếm "
                            android:textAppearance="?android:textAppearanceListItemSmall"
                            android:inputType="text"
                            android:singleLine="true"
                            android:onClick="onSearchEditTextClick">
                        </laotsezu.com.kiot.utilities.GoodsSearchEditText>
                        <ImageView
                            android:id="@+id/goods_select_scan_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/activity_horizontal_margin"
                            android:src="@drawable/ic_clear_cart_24dp"
                            android:background="?android:selectableItemBackgroundBorderless"
                            android:contentDescription="@string/app_name"
                            android:onClick="onCleanCartButtonClick"
                            />
                    </LinearLayout>
                    <View
                        android:id="@+id/goods_select_padding2"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@+id/goods_select_search_and_scan"
                        android:background="#42c7bdbd"
                        />
                    <android.support.v4.widget.SwipeRefreshLayout
                        android:id="@+id/goods_select_goods_list_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/goods_select_padding2"
                        >
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/goods_select_goods_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/activity_horizontal_super_small_margin"
                            android:paddingBottom="@dimen/activity_horizontal_super_small_margin"
                            android:scrollbars="none"
                            android:background="@color/super_light_gray"
                            >
                        </android.support.v7.widget.RecyclerView>
                    </android.support.v4.widget.SwipeRefreshLayout>
                    <ProgressBar
                        android:id="@+id/goods_select_progressbar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="?android:attr/actionBarSize"
                        android:layout_centerInParent="true"
                        />
                    <RelativeLayout
                        android:visibility="gone"
                        android:id="@+id/goods_select_loadfailed_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingTop="?android:actionBarSize"
                        >
                        <TextView
                            android:id="@+id/goods_select_loadfailed_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textAppearance="?android:textAppearance"
                            android:text="Kết nối mạng không ổn định"
                            android:textColor="?android:textColorHint"
                            />
                        <Button
                            android:id="@+id/goods_select_loadfailed_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/goods_select_loadfailed_text"
                            android:layout_centerHorizontal="true"
                            android:textAppearance="?android:textAppearanceLarge"
                            android:text="THỬ LẠI"
                            android:textColor="?android:textColorHint"
                            android:onClick="onRetryButtonClick"
                            />
                    </RelativeLayout>
                </RelativeLayout>
        </android.support.design.widget.CoordinatorLayout>
        <LinearLayout
            android:id="@+id/goods_select_left_drawer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:clickable="true"
            >
            <RelativeLayout
                android:id="@+id/left_drawer_personnelinfo_container"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/navigation_drawer_header"
                    android:contentDescription="@string/app_name"
                    />
                <ImageView
                    android:id="@+id/left_drawer_personnelinfo_avatar"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_above="@+id/left_drawer_personnelinfo_ten"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/personnel_avatar"
                    />
                <TextView
                    android:id="@+id/left_drawer_personnelinfo_ten"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/left_drawer_personnelinfo_diachi"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:paddingStart="@dimen/activity_horizontal_margin"
                    android:text="@{personnel.personnel_ten_info}"
                    android:textColor="@android:color/white"
                    />
                <TextView
                    android:id="@+id/left_drawer_personnelinfo_diachi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/left_drawer_personnelinfo_dangxuat"
                    android:textAppearance="?android:textAppearance"
                    android:paddingStart="@dimen/activity_horizontal_margin"
                    android:textColor="@android:color/white"
                    android:text="@{personnel.personnel_sdt_info}"
                    />
                <TextView
                    android:id="@+id/left_drawer_personnelinfo_dangxuat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:textAppearance="?android:textAppearance"
                    android:paddingStart="@dimen/activity_horizontal_margin"
                    android:layout_marginBottom="@dimen/activity_horizontal_small_margin"
                    android:clickable="true"
                    android:textColor="@android:color/white"
                    android:text="(Đăng xuất)"
                    android:onClick="onLogoutButtonClick"
                    />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/left_drawer_thongtincanhan_container"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_horizontal_margin"
                android:background="@drawable/ripped_with_orangecolor"
                android:clickable="true"
                android:onClick="naviToPersonnelInfoActivity"
                >
                <ImageView
                    android:id="@+id/left_drawer_thongtincanhan_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingEnd="@dimen/activity_horizontal_small_margin"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_person_black_24dp"
                    />
                <TextView
                    android:id="@+id/left_drawer_thongtincanhan_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textAppearance="?android:textAppearanceListItem"
                    android:textColor="@android:color/black"
                    android:text="Thông tin cá nhân"
                    android:gravity="start|center_vertical"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/left_drawer_khachhang_container"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_horizontal_margin"
                android:background="@drawable/ripped_with_orangecolor"
                android:clickable="true"
                android:onClick="naviToSelectCustomerActivity"
                >
                <ImageView
                    android:id="@+id/left_drawer_khachhang_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingEnd="@dimen/activity_horizontal_small_margin"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_wc_black_24dp"
                    />
                <TextView
                    android:id="@+id/left_drawer_khachhang_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textAppearance="?android:textAppearanceListItem"
                    android:textColor="@android:color/black"
                    android:text="Khách hàng"
                    android:gravity="start|center_vertical"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/left_drawer_giohang_container"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_horizontal_margin"
                android:background="@drawable/ripped_with_orangecolor"
                android:clickable="true"
                android:onClick="naviToCartBrowseActivity"
                >
                <ImageView
                    android:id="@+id/left_drawer_giohang_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingEnd="@dimen/activity_horizontal_small_margin"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_cart_black_24dp"
                    />
                <TextView
                    android:id="@+id/left_drawer_giohang_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textAppearance="?android:textAppearanceListItem"
                    android:textColor="@android:color/black"
                    android:text="Giỏ hàng"
                    android:gravity="start|center_vertical"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/left_drawer_trahang_container"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_horizontal_margin"
                android:background="@drawable/ripped_with_orangecolor"
                android:clickable="true"
                android:onClick="naviToReturnGoodsActivity"
                >
                <ImageView
                    android:id="@+id/left_drawer_trahang_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingEnd="@dimen/activity_horizontal_small_margin"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_event_busy_black_24dp"
                    />
                <TextView
                    android:id="@+id/left_drawer_trahang_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textAppearance="?android:textAppearanceListItem"
                    android:textColor="@android:color/black"
                    android:text="Trả hàng"
                    android:gravity="start|center_vertical"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/left_drawer_caidat_container"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_horizontal_margin"
                android:background="@drawable/ripped_with_orangecolor"
                android:clickable="true"
                android:onClick="naviToSettingsActivity"
                >
                <ImageView
                    android:id="@+id/left_drawer_caidat_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingEnd="@dimen/activity_horizontal_small_margin"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_settings_black_24dp"
                    />
                <TextView
                    android:id="@+id/left_drawer_caidat_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textAppearance="?android:textAppearanceListItem"
                    android:textColor="@android:color/black"
                    android:text="Cài đặt"
                    android:gravity="start|center_vertical"
                    />
            </LinearLayout>
            <!--<LinearLayout
                android:id="@+id/left_drawer_thongtincanhan_container"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_horizontal_margin"
                >
                <ImageView
                    android:id="@+id/left_drawer_thongtincanhan_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingEnd="@dimen/activity_horizontal_small_margin"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_person_black_24dp"
                    />
                <TextView
                    android:id="@+id/left_drawer_thongtincanhan_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@android:color/black"
                    android:text="Thông tin cá nhân"
                    android:gravity="start|center_vertical"
                    />
            </LinearLayout>-->
        </LinearLayout>
    </android.support.v4.widget.DrawerLayout>
</layout>